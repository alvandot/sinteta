{
    "plugins": [
        "prettier-plugin-blade",
        "prettier-plugin-tailwindcss"
    ],
    "overrides": [
        {
            "files": ["*.blade.php", "*.php", "*.js", "*.ts", "*.vue", "*.tsx"],
            "options": {
                "parser": "blade",
                "tabWidth": 4
            }
        }
    ]
}